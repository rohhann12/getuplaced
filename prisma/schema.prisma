generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Founder {
  id          String  @id @default(uuid())
  email       String  @unique
  companyName String  @unique
  ctoName     String  @unique
  users       User[]  // one-to-many relation
  domain      String
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  gmailAppPassword String?   @unique
  hits         Int?     @default(2)
  referalCode  Int?  @unique
  founderId    String?
  founder      Founder?  @relation(fields: [founderId], references: [id])
  template     template[]
}
model template{
  id        String @id @default(uuid())
  template  String
  subject   String
  userId    String
  user      User?  @relation(references:[id],fields: [userId])
}